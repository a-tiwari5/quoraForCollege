<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 offset-3">
            <h1 class="text-center text-muted">Edit Form</h1>
            <form class="needs-validation" novalidate action="/posts/<%=post._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="question">Question:</label>
                    <input class="form-control" type="text" name="post[question]" id="question"
                        value="<%= post.question %> " required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Ivalid Input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="subject">Subject:</label>
                    <input class="form-control" type="text" name="post[subject]" id="subject"
                        value="<%= post.subject %> " required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Ivalid Input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image:</label>
                    <input class="form-control" type="text" name="post[image]" id="question" value="<%= post.image %>"
                        required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Ivalid Input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Body:</label>
                    <textarea class="form-control" name="post[body]" id="body" cols="30" rows="10"
                        required><%= post.body %> </textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Ivalid Input
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
            <a class="btn btn-dark" href="/posts/<%=post._id%>">Back</a>
        </div>
    </div>