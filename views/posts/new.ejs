<% layout('layouts/boilerplate') %>
    <h1 class="text-muted text-center">Ask A Question</h1>
    <div class="row">
        <div class="col-md-6 offset-3">
            <form class="needs-validation" novalidate action="/posts" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="question">Question:</label>
                    <input class="form-control" type="text" name="post[question]" id="question" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Ivalid Input
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="subject">Subject:</label>
                    <input class="form-control" type="text" name="post[subject]" id="subject" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Ivalid Input
                    </div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">URL</span>
                        <input class="form-control" type="text" name="post[image]" id="question" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                        <div class="invalid-feedback">
                            Ivalid Input
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Body:</label>
                    <textarea class="form-control" name="post[body]" id="body" cols="30" rows="10" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Ivalid Input
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
            <a class="btn btn-dark" href="/posts">Back</a>
        </div>
    </div>